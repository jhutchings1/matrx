{
  "name": "matrx",
  "version": "0.4.1",
  "private": true,
  "description": "MatrX main application",
  "main": "src/server.js",
  "svelte": "src/App.svelte",
  "nodemonConfig": {
    "verbose": true,
    "delay": "3000",
    "watch": [
      "packages",
      "dist",
      "src/server.js"
    ]
  },
  "scripts": {
    "build": "rollup -c",
    "bootstrap": "lerna bootstrap --hoist",
    "dev-old": "nodemon --watch packages --watch dist --watch src/serv.js & npm run css:watch & rollup -c -w",
    "dev": "nodemon & npm run css:watch & rollup -c -w",
    "start": "node src/server",
    "eslint": "npx eslint -c .eslintrc.js --ext .js,.svelte,.html .",
    "lint": "npm run eslint",
    "nightwatch": "npx nightwatch",
    "test": "start-server-and-test start http://localhost:8080 cy:run",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test-cypress": "run-p --race dev cy:run",
    "css:build": "node-sass --omit-source-map-url src/matrx.scss dist/global.css",
    "css:watch": "npm run css:build -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matrx-transformation/matrx.git"
  },
  "keywords": [
    "cybersecurity",
    "DevSecOps",
    "svelte",
    "svelte3"
  ],
  "author": "The MatrX team",
  "license": "UNLICENSED",
  "dependencies": {
    "@matrx/svelte-realtime-adapter-cosmos-db-temporal": "file:packages/svelte-realtime-adapter-cosmos-db-temporal",
    "@matrx/svelte-realtime-server": "file:packages/svelte-realtime-server",
    "@matrx/svelte-realtime-store": "file:packages/svelte-realtime-store",
    "matrx": "file:"
  },
  "devDependencies": {
    "bulma": "^0.7.5",
    "bulmaswatch": "^0.7.5",
    "chromedriver": "^76.0.0",
    "cypress": "^3.4.1",
    "eslint": "^6.1.0",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "lerna": "^3.16.5",
    "nightwatch": "^1.1.13",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.3",
    "rollup": "^1.17.0",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.1.0",
    "serve-static": "^1.14.1",
    "socket.io-client": "^2.2.0",
    "start-server-and-test": "^1.10.6",
    "svelte": "^3.12.0",
    "svelte-spa-router": "^1.2.1",
    "wait-on": "^3.3.0"
  },
  "peerDependencies": {
    "svelte": "^3.5.0"
  }
}
