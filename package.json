{
  "name": "matrx",
  "version": "0.4.3",
  "description": "MatrX main application",
  "main": "src/server.js",
  "svelte": "src/App.svelte",
  "private": true,
  "nodemonConfig": {
    "verbose": true,
    "delay": "3000",
    "watch": [
      "packages",
      "dist",
      "src/server.js"
    ]
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "nodemon & npm run css:watch & rollup -c -w",
    "start": "node src/server",
    "eslint": "npx eslint -c .eslintrc.js --ext .js,.svelte,.html .",
    "lint": "npm run eslint",
    "nightwatch": "nightwatch",
    "cypress": "cypress run",
    "cypress:active": "cypress run --spec cypress/integration/realtime.spec.js",
    "test": "start-server-and-test start http://localhost:8080 cypress",
    "test:active": "start-server-and-test start http://localhost:8080 cypress:active",
    "css:build": "node-sass --omit-source-map-url src/matrx.scss dist/global.css",
    "css:watch": "npm run css:build -- --watch",
    "ports": "sudo netstat -ltnp",
    "coverage:build": "rollup -c rollup.config.coverage-client.js",
    "coverage:report": "nyc report --reporter=text-summary",
    "coverage:check": "nyc check-coverage --statements 80 --branches 65 --functions 70 --lines 80",
    "coverage:generate-html-report": "nyc report -r html",
    "coverage": "npm run coverage:build; nyc npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matrx-transformation/matrx.git"
  },
  "keywords": [
    "cybersecurity",
    "DevSecOps",
    "svelte",
    "svelte3"
  ],
  "author": "The MatrX team",
  "license": "UNLICENSED",
  "dependencies": {
    "@matrx/svelte-realtime-adapter-cosmos-db-temporal": "file:packages/svelte-realtime-adapter-cosmos-db-temporal",
    "@matrx/svelte-realtime-server": "file:packages/svelte-realtime-server",
    "bufferutil": "^4.0.1",
    "compression": "^1.7.1",
    "cypress": "^3.4.1",
    "express": "^4.17.1",
    "helmet": "^3.21.1",
    "lodash": "^4.17.15",
    "regexparam": "^1.3.0",
    "serve-static": "^1.14.1",
    "short-unique-id": "^1.1.1",
    "uuid": "^3.3.3",
    "uws": "^100.0.1"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^1.10.1",
    "@matrx/svelte-realtime-store": "file:packages/svelte-realtime-store",
    "bulma": "^0.7.5",
    "bulmaswatch": "^0.7.5",
    "eslint": "^6.1.0",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "istanbul-lib-coverage": "^2.0.5",
    "lerna": "^3.16.5",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.3",
    "nyc": "^14.1.1",
    "rollup": "^1.17.0",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-istanbul": "^2.0.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.1.0",
    "start-server-and-test": "^1.10.6",
    "svelte": "^3.6.10",
    "svelte-spa-router": "^1.2.1"
  },
  "peerDependencies": {
    "svelte": "^3.5.0"
  }
}
